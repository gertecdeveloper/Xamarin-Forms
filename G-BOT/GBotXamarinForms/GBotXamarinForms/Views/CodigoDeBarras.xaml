<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GBotXamarinForms.CodigoDeBarras">
    
        <Grid>
            <Grid.RowDefinitions >
                <RowDefinition Height="20*" />
                <RowDefinition Height="80*" />
        </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>

        <Label Text="Leitura Código de Barras" FontSize="Title" Grid.Row="0" Grid.ColumnSpan="2" HorizontalOptions="CenterAndExpand" VerticalOptions="Center"/>
        <StackLayout  Margin="10" Grid.Column="0" Grid.Row="1">
            <Button Text="INICIAR SERVIÇO" Clicked="Button_Clicked"/>
            <Button Text="PARAR SERVIÇO" Clicked="Button_Clicked_1"/>
            <Button Text="LIGAR O LED" Clicked="Button_Clicked_2" />
            <Button Text="DESLIGAR O LED" Clicked="Button_Clicked_3" />
        </StackLayout>

        <ListView x:Name="listResponta" Grid.Row="1" Grid.Column="1" SelectionMode="None"  >
            
        </ListView>  
            
         
            
        </Grid>
</ContentPage>